  <script>
    const yesBtn = document.getElementById('yesBtn');
    const noBtn = document.getElementById('noBtn');
    const questionPage = document.getElementById('questionPage');
    const responsePage = document.getElementById('responsePage');
    const showGiftBtn = document.getElementById('showGiftBtn');
    const flowerPage = document.getElementById('flowerPage');
    const bgm = document.getElementById('bgm');

    let messageIndex = 0;
    const messages = [
      "Are you sure?",
      "Why are you still clicking?",
      "Pleaseee say yes ;-;",
      "Ok fine ðŸ˜¤",
      "No gift for you then",
      "Iâ€™m sad now ðŸ˜ž",
      "Stop itttttt",
      "Boomer energy detected!",
      "You clicked again? Rudeee",
      "One more click means you like me >:]!",
      "huh???! You dooo?? geezzzz",
      "Boomer, click that bu-on...pretty pweaseee!",
    ];

    noBtn.addEventListener('click', () => {
      noBtn.textContent = messages[messageIndex];
      messageIndex = (messageIndex + 1) % messages.length;

      const size = parseFloat(window.getComputedStyle(yesBtn).fontSize);
      yesBtn.style.fontSize = `${size * 1.1}px`;
    });

    yesBtn.addEventListener('click', () => {
      questionPage.style.display = 'none';
      responsePage.style.display = 'flex';
      document.title = "Thank you ðŸ’–";

      confetti({
        particleCount: 200,
        spread: 70,
        origin: { y: 0.6 }
      });

      try {
        bgm.play();
      } catch (e) {
        console.log("Autoplay blocked.");
      }

      const script = document.createElement('script');
      script.src = 'https://tenor.com/embed.js';
      document.body.appendChild(script);
    });

    showGiftBtn.addEventListener('click', () => {
      responsePage.style.display = 'none';
      flowerPage.style.display = 'flex';
      document.title = "A Magical Garden ðŸŒ¸";

      setTimeout(() => {
        const backBtn = document.createElement('button');
        backBtn.textContent = "Back to Gift";
        backBtn.style.cssText = `
          position: fixed;
          bottom: 20px;
          right: 20px;
          padding: 10px 20px;
          border-radius: 50px;
          border: none;
          background: #ff6b6b;
          color: white;
          font-weight: bold;
          cursor: pointer;
          z-index: 1000;
        `;
        backBtn.onclick = () => {
          flowerPage.style.display = 'none';
          responsePage.style.display = 'flex';
          document.title = "Thank you ðŸ’–";
          backBtn.remove();
        };
        document.body.appendChild(backBtn);
      }, 3000);
    });
  </script>
